---
import LogoShine from './LogoShine.tsx'
---

<section class="min-h-screen flex flex-col items-center justify-center px-4 py-20 relative overflow-hidden">
  <!-- Ambient glow behind terminal -->
  <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
    <div class="w-[800px] h-[600px] rounded-full bg-[var(--color-accent-primary)] opacity-[0.03] blur-[100px]"></div>
  </div>

  <!-- Terminal Window -->
  <div class="terminal-frame w-full max-w-4xl mx-auto relative z-10 animate-fade-in-up">
    <!-- Window Chrome -->
    <div class="terminal-buttons">
      <div class="terminal-button terminal-button-close"></div>
      <div class="terminal-button terminal-button-minimize"></div>
      <div class="terminal-button terminal-button-maximize"></div>
      <span class="ml-4 text-[var(--color-text-muted)] text-xs font-mono">conduit â€” zsh</span>
    </div>

    <!-- Terminal Content -->
    <div class="p-8 md:p-12 flex flex-col items-center">
      <!-- ASCII Logo with Shine Animation -->
      <div class="mb-8">
        <LogoShine client:load className="phosphor-glow" />
      </div>

      <!-- Tagline -->
      <div class="text-center mb-8">
        <p class="text-[var(--color-text-muted)] font-mono text-sm mb-2">
          <span class="text-[var(--color-accent-success)]">$</span> conduit --help
        </p>
        <h1 class="font-display text-3xl md:text-4xl lg:text-5xl text-[var(--color-text-bright)] mb-4">
          Orchestrate AI.<br />
          <span class="text-[var(--color-accent-primary)]">In Your Terminal.</span>
        </h1>
        <p class="text-[var(--color-text-secondary)] text-lg max-w-xl mx-auto">
          Run Claude Code and Codex CLI side-by-side with tab-based session management,
          real-time streaming, and token tracking.
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 items-center">
        <a href="#install" class="btn-primary">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          Install Now
        </a>
        <a href="https://github.com/fcoury/conduit" target="_blank" rel="noopener noreferrer" class="btn-secondary">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          View on GitHub
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-[var(--color-text-muted)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
