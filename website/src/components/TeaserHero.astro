---
import LogoShine from './LogoShine.tsx'
import WaitlistForm from './WaitlistForm.tsx'
---

<section class="min-h-screen flex flex-col items-center justify-center px-3 sm:px-4 py-12 sm:py-20 relative overflow-hidden overflow-x-hidden">
  <!-- Ambient glow behind terminal -->
  <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
    <div class="w-[800px] h-[600px] rounded-full bg-[var(--color-accent-primary)] opacity-[0.03] blur-[100px]"></div>
  </div>

  <!-- Parallel flow lines converging to center -->
  <div class="flow-lines-container">
    <!-- Left side lines -->
    <div class="flow-line flow-line-left flow-line-1"></div>
    <div class="flow-line flow-line-left flow-line-2"></div>
    <div class="flow-line flow-line-left flow-line-3"></div>
    <!-- Right side lines -->
    <div class="flow-line flow-line-right flow-line-4"></div>
    <div class="flow-line flow-line-right flow-line-5"></div>
    <div class="flow-line flow-line-right flow-line-6"></div>
  </div>

  <!-- Terminal Window -->
  <div class="terminal-frame w-full max-w-3xl mx-auto relative z-10 animate-fade-in-up">
    <!-- Window Chrome -->
    <div class="terminal-buttons">
      <div class="terminal-button terminal-button-close"></div>
      <div class="terminal-button terminal-button-minimize"></div>
      <div class="terminal-button terminal-button-maximize"></div>
      <span class="ml-4 text-[var(--color-text-muted)] text-xs font-mono">conduit â€” coming soon</span>
    </div>

    <!-- Terminal Content -->
    <div class="p-4 sm:p-8 md:p-12 flex flex-col items-center">
      <!-- ASCII Logo with Shine Animation -->
      <div class="mb-6 sm:mb-8 w-full flex justify-center overflow-hidden">
        <LogoShine client:load className="phosphor-glow" />
      </div>

      <!-- Tagline -->
      <div class="text-center mb-6 sm:mb-10">
        <p class="text-[var(--color-text-muted)] font-mono text-xs sm:text-sm mb-2">
          <span class="text-[var(--color-accent-success)]">$</span> conduit --version
        </p>
        <h1 class="font-display text-2xl sm:text-3xl md:text-4xl lg:text-5xl text-[var(--color-text-bright)] mb-3 sm:mb-4 px-2">
          Run a Team of AI Agents.<br />
          <span class="text-[var(--color-accent-primary)]">In Your Terminal.</span>
        </h1>
        <p class="text-[var(--color-text-secondary)] text-sm sm:text-base max-w-lg mx-auto mb-2 px-2">
          Parallel agents, parallel projects, one Conduit.
        </p>
        <p class="text-[var(--color-accent-warning)] font-mono text-xs sm:text-sm">
          Coming soon.
        </p>
      </div>

      <!-- Waitlist Form -->
      <WaitlistForm client:load className="mb-6 sm:mb-8" />
    </div>
  </div>

  <!-- Footer info -->
  <div class="absolute bottom-8 text-center">
    <p class="text-[var(--color-text-faint)] text-xs font-mono">
      Built with Rust + Ratatui
    </p>
  </div>
</section>
