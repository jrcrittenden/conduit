# Conduit Configuration File
# Location: ~/.conduit/config.toml
#
# This file allows you to customize keybindings, tool paths, and themes.
# Settings are merged with defaults, so you only need to specify
# the values you want to change.

# ============================================================================
# Theme Configuration
# ============================================================================
# Configure the color theme for the UI. Themes can be specified by name
# (built-in or discovered VS Code themes) or by path to a theme JSON file.
#
# Built-in themes:
#   - default-dark       (Default)
#   - default-light
#   - catppuccin-mocha
#   - catppuccin-latte
#   - tokyo-night
#   - dracula
#
# VS Code themes are auto-discovered from ~/.vscode/extensions/
#
# [theme]
# # Use a built-in theme
# name = "catppuccin-mocha"
#
# # Or use a discovered VS Code theme (by label)
# # name = "Tokyo Night"
#
# # Or specify a custom theme file path
# # path = "/path/to/my-theme-color-theme.json"

# ============================================================================
# Default Model
# ============================================================================
# Configure the single default agent + model used for new sessions.
#
# [model]
# agent = "claude"
# model = "opus"

# ============================================================================
# Tool Paths
# ============================================================================
# Queue + Steering Configuration
# ============================================================================
# Configure how messages submitted during an active run are handled.
#
# [queue]
# # delivery = "separate"     # "separate" = each queued message is a turn
# # delivery = "concat"       # "concat" = queued messages are merged into one turn
# # mode = "one-at-a-time"    # deliver one queued message per turn (default)
# # mode = "all"              # deliver all queued messages at once
#
# [steer]
# # behavior = "hard"         # hard = interrupt after current tool and skip remaining tools
# # behavior = "soft"         # soft = wait until the current turn finishes
# # fallback = "queue"        # queue if steering isn't supported by the agent harness
# # fallback = "interrupt"    # interrupt current run and start new message immediately
# # fallback = "prompt"       # prompt before interrupting (recommended if using interrupt)
#
# ============================================================================
# Selection & Clipboard
# ============================================================================
# Configure how selections are copied and whether they are cleared afterward.
#
# [selection]
# # Copy immediately when mouse selection ends
# auto_copy_selection = true
# # Clear the selection after copying
# clear_selection_after_copy = true

# ============================================================================
# UI
# ============================================================================
# Configure optional UI affordances.
#
# [ui]
# # Show a minimal scrollbar in the chat view (default: false)
# show_chat_scrollbar = false
#
# ============================================================================
# Web Workspace Status
# ============================================================================
# Configure how the web sidebar preloads and refreshes git/PR status.
#
# [web_status]
# # Run an initial scan for all workspaces on startup
# initial_scan = true
# # Max number of concurrent status scans
# status_scan_concurrency = 2
# # Refresh interval (ms) for the selected workspace
# selected_refresh_interval_ms = 5000
# # Refresh interval (ms) for PR status on the selected workspace
# pr_refresh_interval_ms = 60000

# ============================================================================
# Workspace Defaults
# ============================================================================
# Configure default workspace behavior (per repository overrides available in UI).
#
# [workspaces]
# # mode = "worktree"             # "worktree" (default) or "checkout"
# # archive_delete_branch = true  # delete local branch on archive
# # archive_remote_prompt = true  # prompt for remote deletion on archive
#
# Configure paths to external tools if they are not in your PATH or if
# you want to use a specific version. All paths are optional - by default,
# tools are auto-detected from your PATH.
#
# [tools]
# git = "/usr/local/bin/git"
# gh = "/usr/local/bin/gh"
# claude = "/opt/homebrew/bin/claude"
# codex = "/usr/local/bin/codex"
# gemini = "/usr/local/bin/gemini"
# opencode = "/usr/local/bin/opencode"

# ============================================================================
# Keybindings
# ============================================================================
# Key Notation:
#   C-x     = Ctrl+x
#   M-x     = Alt+x (Meta)
#   S-x     = Shift+x
#   C-S-x   = Ctrl+Shift+x
#   M-S-x   = Alt+Shift+x
#   <Enter> = Enter key
#   <Esc>   = Escape key
#   <Tab>   = Tab key
#   <BS>    = Backspace
#   <Del>   = Delete
#   <Up>    = Up arrow
#   <Down>  = Down arrow
#   <Left>  = Left arrow
#   <Right> = Right arrow
#   <Home>  = Home key
#   <End>   = End key
#   <PgUp>  = Page Up
#   <PgDn>  = Page Down

[keys]
# Global keybindings (work in all modes unless overridden)
#
# quit = "C-q"
# toggle_sidebar = "C-t"
# new_project = "C-n"
# open_pr = "C-p"
# suspend = "C-z"
# edit_prompt_external = "M-e"
# interrupt_agent = "C-c"
# toggle_view_mode = "C-g"
# show_model_selector = "C-o"
# toggle_metrics = "M-p"
# dump_debug_state = "M-g"
# close_tab = "M-S-w"
#
# Readline-style editing (global)
# move_cursor_start = "C-a"
# move_cursor_end = "C-e"
# move_cursor_left = "C-b"
# move_cursor_right = "C-f"
# move_word_left = "M-b"
# move_word_right = "M-f"
# delete_to_start = "C-u"
# delete_to_end = "C-k"
# delete_word_back = "C-w"
# delete = "C-d"
# backspace = "C-h"
# insert_newline = "C-j"

[keys.chat]
# Chat mode keybindings (when typing in the input box)
#
# submit = "<Enter>"
# submit_steer = "C-<Enter>" # best-effort steering when agent is busy
# insert_newline = "S-<Enter>" # or "M-<Enter>" for Alt/Option+Enter
# scroll_page_up = "<PgUp>"
# scroll_page_down = "<PgDn>"
# scroll_to_bottom = "<Esc>"
# prev_user_message = "M-<Up>"
# next_user_message = "M-<Down>"
# next_tab = "<Tab>"
# prev_tab = "S-<Tab>"

[keys.scrolling]
# Scrolling mode keybindings (when scrolling through chat)
#
# scroll_up = "k"
# scroll_down = "j"
# scroll_page_up = "<PgUp>"
# scroll_page_down = "<PgDn>"
# scroll_to_top = "g"
# scroll_to_bottom = "G"
# cancel = "<Esc>"

[keys.sidebar]
# Sidebar navigation keybindings
#
# select_prev = "k"
# select_next = "j"
# expand_or_select = "l"
# collapse = "h"
# exit_sidebar_mode = "<Esc>"
# add_repository = "r"
# open_settings = "s"
# archive_or_remove = "x"

[keys.dialog]
# Dialog keybindings (confirmation dialogs, etc.)
#
# confirm_toggle = "<Tab>"
# confirm = "<Enter>"
# cancel = "<Esc>"
# confirm_yes = "y"
# confirm_no = "n"
# toggle_details = "d"

[keys.project_picker]
# Project picker keybindings
#
# select_prev = "C-k"
# select_next = "C-j"
# select_page_up = "C-b"
# select_page_down = "C-f"
# add_repository = "C-a"
# confirm = "<Enter>"
# cancel = "<Esc>"

[keys.model_selector]
# Model selector keybindings
#
# select_prev = "k"
# select_next = "j"
# confirm = "<Enter>"
# cancel = "<Esc>"
# set_default_model = "M-d"

[keys.raw_events]
# Raw events view keybindings
#
# raw_events_select_prev = "k"
# raw_events_select_next = "j"
# raw_events_toggle_expand = "l"
# raw_events_collapse = "h"

[keys.queue]
# Queue editor keybindings
#
# select_prev = "<Up>"
# select_next = "<Down>"
# queue_edit = "<Enter>"
# queue_delete = "<Del>"
# cancel = "<Esc>"
# queue_move_up = "M-k"
# queue_move_down = "M-j"

# Available actions:
#
# Global:
#   quit, toggle_sidebar, new_project, open_pr, interrupt_agent,
#   toggle_view_mode, show_model_selector, toggle_metrics, dump_debug_state
#
# Tab management:
#   close_tab, next_tab, prev_tab
#
# Scrolling:
#   scroll_up, scroll_down, scroll_page_up, scroll_page_down,
#   scroll_to_top, scroll_to_bottom
#
# Input editing:
#   insert_newline, backspace, delete, delete_word_back, delete_word_forward,
#   delete_to_start, delete_to_end, move_cursor_left, move_cursor_right,
#   move_cursor_start, move_cursor_end, move_word_left, move_word_right,
#   move_cursor_up, move_cursor_down, history_prev, history_next, submit
#   submit_steer, open_queue_editor, close_queue_editor, queue_move_up,
#   queue_move_down, queue_edit, queue_delete
#
# Navigation:
#   select_next, select_prev, select_page_down, select_page_up,
#   confirm, cancel, set_default_model, expand_or_select, collapse,
#   add_repository, open_settings, archive_or_remove
#
# Sidebar:
#   enter_sidebar_mode, exit_sidebar_mode
#
# Raw events:
#   raw_events_select_next, raw_events_select_prev,
#   raw_events_toggle_expand, raw_events_collapse
#
# Dialog:
#   confirm_yes, confirm_no, confirm_toggle, toggle_details
